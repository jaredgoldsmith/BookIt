<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pdx.cs410J.jgolds">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:textAlignment="center"
        android:theme="@style/Theme.AppointmentBook">
        <activity
            android:name=".READMEActivity"
            android:exported="true"
            android:label="README"
            />
        <activity
            android:name=".SearchAppointmentsActivity"
            android:exported="true"
            android:label="Search Appointments"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".DisplayBookActivity"
            android:exported="true"
            android:label="Display Appointment Book"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".AppointmentActivity"
            android:exported="true"
            android:label="Add Appointment" />
        <activity
            android:name=".CalculatorActivity"
            android:exported="true"
            android:label="Add Appointment"
            android:textAlignment="center" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppointmentBook.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>